
  <%= form_with(model: user, local: true) do |form| %>
    <% if user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="input-group mb-3">
      <%= form.label 'email', class: 'input-group-text' %>
      <%= form.text_field :email, class: 'form-control input_pass' %>
    </div>

    <div class="input-group mb-3">
      <%= form.label 'password', class: 'input-group-text' %>
      <%= form.password_field :password, class: 'form-control input_pass' %>
    </div>

    <div class="input-group mb-3">
      <%= form.label 'password_confirmation', class: 'input-group-text' %>
      <%= form.password_field :password_confirmation, class: 'form-control input_pass' %>
    </div>

    <div class="d-flex justify-content-center mt-3 login_container">
      <%= form.submit("Criar", :id=>"button", :class=>"btn login_btn", :name=>"submit") %>
    </div>
  <% end %>
