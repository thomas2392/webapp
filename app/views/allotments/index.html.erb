<p id="notice"><%= notice %></p>

<div class="container">
  <h1>Allotments</h1>

  <table class="table table-dark">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Number</th>
        <th scope="col">Value</th>
        <th scope="col">Venture</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @allotments.each do |allotment| %>
        <tr>
          <td><%= allotment.name %></td>
          <td><%= allotment.number %></td>
          <td><%= allotment.value %></td>
          <td><%= allotment.venture.name %></td>
          <td><%= link_to 'Edit', edit_allotment_path(allotment) %></td>
          <td><%= link_to 'Destroy', allotment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Novo', new_allotment_path, :class=>"btn create_btn float-right" %>
</div>